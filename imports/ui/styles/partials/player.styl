.player
  position fixed
  bottom: 0
  box-shadow: 0 0 8px rgba(0,0,0,.4)
  background-color: #fff
  width: 100%
  height: 90px
  padding: 0 24px
  box-sizing: border-box
  > audio
    display: none
  .play-col
    width: 33.333333%
    float: left
    &.mid-pl
      text-align: center
  .play-btn svg
    width: 66px !important
    height: 66px !important
  .ico-box
    float: right
    width: 10%
    min-width: 35px
    padding-top: 32px
  .volume-slider
    float: right
    width: 90%
    max-width: 160px

