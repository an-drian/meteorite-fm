.my-radio-sec
  height: 100vh
  background-color: $opacity_white
  position relative
  padding 10px 24px 100px
#radio-file-inp
  display: none
  &+ label
    display: block
    background-color: $main_blue1
    box-shadow $box_shadow
    float: left
    box-sizing border-box
    cursor: pointer
    padding 5px
    width: 100%
    span
      color: #ffffff
      display: inline-block
      position relative
      box-sizing border-box
      padding-left: 7px
      bottom: 4px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      width: 120px

.asm-row
  position relative
  overflow: hidden
  padding: 4px 0
  &:after
    clear both
  .asm-col
    float: left
    box-sizing border-box
    &.left
      width: 40%
    &.right
      width: 60%
      padding-left: 10px
.station-tbl
  width: 100%
  tr
    border-bottom: 1px solid $main_blue1
  td
    padding: 5px 0
    font-size: remify(14px)
    color: $main_grey_text
    vertical-align: middle
    &:first-child
      padding-left: 5px
      width: 40px




